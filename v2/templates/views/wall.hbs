<div class="row" id="rowheader">
  <div class="col-md-12" id="header">
    <div class="row" id="headerson">
      <div class="col-md-1"><img src="images/logob.png" width=36px height=width></div>
      <div class="col-md-2"><input type="button" class="btn btn-primary" id="showf" value="hide friends" /></div>
      <div class="col-md-1"><a href="/global"><img src="images/uparrow.png" width=36px height=width></a></div>
      <div class="col-md-4"><strong><h4>{{user}}'s space</h4></strong></div>
      <div class="col-md-2">
        <a href="/wall"><div id="username"><img class="img-circle" width=36px height=width src="images/{{user}}.jpg" > {{user}}({{id_user}}) </div> </a>
      </div>
      <div class="col-md-2">
      <img width=36px height=width src="../images/add.png">
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      <a href="/logout" id="logout" type="button" class="btn btn-warning">Logout</a>
      <input type="button" class="btn btn-info" id="help" value="(?)" />
      </div>
    </div>
  </div>
</div>
<div class="row" id="rowcontent">
  <div class="col-md-3" id="left-col">
    <div id="friends">
      <p class="wall">Friends list</p>
      <div id="dfriends">
        {{#each friends}}
        <div id="onefriend">
          <a href="/friend/{{this.id_user2}}" ><img class="img-circle" width=32px height=width src="images/{{this.user}}.jpg"> {{this.user}}({{this.id_user2}})</a>
          <a class="messageButton" style="cursor:pointer" data-recipient-id="{{id_user2}}" data-recipient="{{user}}"><img src="images/msg.png"> </a>
        </div>
        {{/each}}
      </div>
      <p class="wall">Private messages <span id="messageRecipient"></span></p>
      <div id="dmessages">
        <div id="onemessageto" align="right">
          {{this.msg}}  [pid {{this.clock}}]
        </div>
        <div id="onemessagefrom" align="right">
          {{this.msg}}  [pid {{this.clock}}]
        </div>
        <div id="wallmessage">
          <form action="/send" method="post" id="privatesForm">
          <input class="form-control" type="text" name="message" id="message" ></input>
          <br/>
          <input type="submit" class="btn btn-primary" value="Send" />
          <br/>
          </form>
        </div >
        <script type="text/javascript">
          $("#dmessages").scrollTop($("#dmessages")[0].scrollHeight);
        </script>
      </div>
    </div>
  </div>
  <div class="col-md-6" id="content">
   <!-- This is the content -->
    <div id="processwall">
      <img src="images/{{user}}.jpg" width="160px" height=width class="img-circle" >
      <br><br>
      <p id="process-paragraph">
        <b>Public Posts</b>
        <br>
      </p>
      <form action="/wall/post" method="post" id="programform">
        <div id="wallmessage">
          <input class="form-control" type="text" name="config" id="config" ></input>
          <input type="submit" class="btn btn-primary" id="runsccp" value="Post">
          <input type="button" class="btn btn-warning" id="clean" value="clear">
          <input type="button" class="btn btn-warning" id="skip" value="skip">
          <input type="hidden" id="nocache">
          <div class="alert-danger" id="errormessage" style="display:none">
            <strong>Warning!</strong> Something went wrong.
          </div>
        </div>
        <div id="refreshsccp"><input type="button" class="btn btn-success" id="refreshsccp" value="Refresh" /></div>
      </form>
      <div id="wallposts">
        {{#each memoria}}
        {{#ifCond this.user_msg '!=' 'private'}}
	      <div id="wallmessage">
          <b>{{this.user_msg}}</b>:  {{this.msg}}
        </div>
        {{/ifCond}}
        {{/each}}
      </div>
    </div>
    <!-- /This is the content -->
  </div>
  <div class="col-md-3" id="right-col">
    <input type="button" class="btn btn-primary" id="showp" value="hide posted processes" />
	  <br>
	  <div id="postedp">
      <!-- <p class="wall">Other Thing</p> -->
      <!--p class="wall"> Posted Processes </p-->
      {{#each memoria}}
      {{#ifCond this.class '==' 'process'}}
      <div id="wallmessage">{{this.msg}}</div>
      {{/ifCond}}
      {{/each}}
    </div>
  </div>
</div>
<div id="warning-popup" class="alert-danger" style="position:absolute; width:300px; border-radius:5px; left:50%; margin-left:-150px; top:100px; padding:10px; text-align:center; display:none">
  <strong>Warnings</strong>
  <div></div>
  <input type="button" class="btn btn-warning" onclick="$(this).parent().hide()" value="Close">
</div>
<script src="/v3/js/dspacenet.js"></script>